{
  "name": "server-template",
  "version": "1.0.0",
  "description": "A simple server template",
  "main": "server/app.js",
  "scripts": {
    "build": "npm run clean && babel server -d dist",
    "clean": "rm -rf dist",
    "start": "node ./dist/server/app.js",
    "start:dev": "cross-env NODE_ENV=development && nodemon server/app.js --exec babel-node",
    "test": "cross-env NODE_ENV=test mocha --require @babel/register --require @babel/polyfill --timeout 10000 ./server/**/*.test.js --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adex001/server-template.git"
  },
  "keywords": [
    "server"
  ],
  "author": "Olatunbosun Adeoye",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adex001/server-template/issues"
  },
  "homepage": "https://github.com/adex001/server-template#readme",
  "dependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/runtime": "^7.7.7",
    "babel-plugin-module-resolver": "^4.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2"
  }
}
